{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "lib",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "module": "commonjs"
  },
  "include": [
    "src/**/*.ts"
  ]
}
